{% extends "@SurvosBootstrap/bs5/bootstrap_5_layout.html.twig" %}

{% block javascripts %}
{{ parent() }}
{{ importmap('app') }}
{% endblock %}

{% block title %}Log in!{% endblock %}

            {% block body_content %}
                <div class="row justify-content-center">
                    <div class="col-md-8 col-lg-6 col-xl-5">
                        <div class="card card-md">

                            <div class="card-body">
                                {# <div class="text-center mt-2">
                                <h5 class="text-primary">{{ 'auth.login'|trans }}</h5>
                                <p class="text-muted">{{ 'auth.welcome_back'|trans }}'</p>
                            </div> #}
                                <div class="p-2 mt-4">
                                    <form method="post" id="login_form">
                                        {% if error %}
                                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                        {% endif %}


                                        <h2 class="h2 text-center mb-4 fw-semibold">{{ 'auth.sign_in'|trans }}</h2>
                                        <div class="mb-3">
                                            <label for="inputEmail" class="text-capitalize form-label">{{ 'auth.email'|trans }}</label>
                                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
                                        </div>
                                        <div class="mb-3">
                                            <label for="inputPassword" class="form-label">
                                                {{ 'auth.password'|trans }}
                                                <span class="form-label-description">
                                                <a href="#!">I forgot password</a>
                                            </span>
                                            </label>
                                            <div class="input-group input-group-flat">
                                                <input type="password" name="password" id="inputPassword" class="form-control" required>
                                                <span class="input-group-text">
                                                <a href="#" class="link-secondary">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon"><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path d="M10 12a2 2 0 1 0 4 0a2 2 0 0 0 -4 0"></path><path d="M21 12c-2.4 4 -5.4 6 -9 6c-3.6 0 -6.6 -2 -9 -6c2.4 -4 5.4 -6 9 -6c3.6 0 6.6 2 9 6"></path></svg>
                                                </a>
                                            </span>
                                            </div>
                                        </div>
                                        <input type="hidden" name="_csrf_token"
                                               value="{{ csrf_token('authenticate') }}"
                                        >

                                        {#                                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.#}
                                        {#                                    See https://symfony.com/doc/current/security/remember_me.html#}

                                        <div class="checkbox mb-3">
                                            <label class="form-check">
                                                <input class="form-check-input" type="checkbox" name="_remember_me"> {{ 'auth.remember_me'|trans|title }}
                                            </label>
                                        </div>
                                        <div class="form-footer">
                                            <button id="login_button" class="btn btn-primary w-100" type="submit">
                                            <span class="text-capitalize form-check-label">
                                                {{ 'auth.login'|trans }}
                                            </span>
                                            </button>
                                        </div>

                                    </form>

                                </div>
                            </div>
                            <!-- end card body -->
                            <div class="hr-text">or</div>

                            <div class="card-body">
                                <div class="row">
                                    <div class="col">
                                        <a href="#" class="btn w-100">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon text-github"><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5"></path></svg>
                                            Login with Github
                                        </a>
                                    </div>
                                    <div class="col">
                                        <a href="#" class="btn w-100">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon text-x"><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path d="M4 4l11.733 16h4.267l-11.733 -16z"></path><path d="M4 20l6.768 -6.768m2.46 -2.46l6.772 -6.772"></path></svg>
                                            Login with X
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- end card -->

                        {{ include('@SurvosAuth/_social_media_login_buttons.html.twig') }}

                        <div class="text-center text-secondary mt-3">
                        </div>

                    </div>
                </div>
                <!-- end row -->
            {% endblock  %}
